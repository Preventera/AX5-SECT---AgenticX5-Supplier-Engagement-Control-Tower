# ============================================================================
# AX5-SECT - Configuration Environment Variables
# ============================================================================
# Copiez ce fichier en .env et remplissez les valeurs

# ============================================================================
# MODE DÉVELOPPEMENT (MOCK)
# ============================================================================
# Mettre à "true" pour développer sans crédits API Anthropic
# Les agents retourneront des réponses simulées réalistes
MOCK_MODE=true

# ============================================================================
# ANTHROPIC (CLAUDE) - Requis seulement si MOCK_MODE=false
# ============================================================================
# Votre clé API Anthropic (https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxx

# ============================================================================
# POSTGRESQL - REQUIRED
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ax5sect
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ============================================================================
# NEO4J (OPTIONAL)
# ============================================================================
# Décommenter si vous utilisez Neo4j pour le graphe de connaissances
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your_neo4j_password_here

# ============================================================================
# LANGSMITH (OPTIONAL - OBSERVABILITY)
# ============================================================================
# Décommenter pour activer le tracing LangSmith
# LANGSMITH_API_KEY=your_langsmith_api_key_here
# LANGSMITH_PROJECT=ax5-sect
# LANGCHAIN_TRACING_V2=true

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Mode debug (true/false)
DEBUG=false

# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
